<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/black_round_bg"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="8dp">

    <!-- SL No -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SL No: 1"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Date -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date: 2023-01-01"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Day -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Day: Monday"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Meal Indent -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Indent: Breakfast"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Meal Consumption -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meal Consumption: 200"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Left Over Meal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Left Over Meal: 50"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <!-- Shift -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shift: Day"
        android:textColor="@color/black"
        android:textStyle="bold" />
</LinearLayout>
